@{
    ViewBag.Title = "YonetimKurulu";
    Layout = "~/Views/Shared/_kullanicisayfalari.cshtml";
}
@model IEnumerable<selcukunikonutlari.Models.Daire>

<div class="container">
    <h1 style="text-align:center;">Yönetim Kurulu</h1>
    @{
        selcukunikonutlari.Models.Model1 model1 = new selcukunikonutlari.Models.Model1();
    }
    @foreach (var item in Model)
    {
        if (item.DaireSayibi.durum == 2)
        {
            <div class="row">
                <div class="col-md-4 center-block"></div>
                <div class="col-md-4 center-block">
                    <div class="row">
                        @foreach (var item2 in model1.Galeri.Where(x => x.yk == item.id).ToList())
                    {
                            <img src="@item2.resimyol" width="200" height="250" style="margin-left:auto;margin-right:auto;" />
                        }
                    </div>
                    <div class="row">
                        @item.DaireSayibi.ad @item.DaireSayibi.soyad
                    </div>
                    <div class="row">
                        @item.DaireSayibi.tel
                    </div>
                    <div class="row">
                        @item.DaireSayibi.email
                    </div>
                </div>
                <div class="col-md-4 center-block"></div>
            </div>
        }
        else if (item.DaireSayibi.durum == 3)
        {
            <div class="row">
                <div class="col-md-4 center-block"></div>
                <div class="col-md-4 center-block">
                    <div class="row">
                        @foreach (var item2 in model1.Galeri.Where(x => x.yk == item.id).ToList())
                    {
                            <img src="@item2.resimyol" width="200" height="250" style="margin-left:auto;margin-right:auto;" />
                        }
                    </div>
                    <div class="row">
                        @item.DaireSayibi.ad @item.DaireSayibi.soyad
                    </div>
                    <div class="row">
                        @item.DaireSayibi.tel
                    </div>
                    <div class="row">
                        @item.DaireSayibi.email
                    </div>
                </div>
                <div class="col-md-4 center-block"></div>
            </div>
        }
        else if (item.DaireSayibi.durum == 4)
        {
            <div class="row">
                <div class="col-md-4 center-block"></div>
                <div class="col-md-4 center-block">
                    <div class="row">
                        @foreach (var item2 in model1.Galeri.Where(x => x.yk == item.id).ToList())
                    {
                            <img src="@item2.resimyol" width="200" height="250" style="margin-left:auto;margin-right:auto;" />
                        }
                    </div>
                    <div class="row">
                        @item.DaireSayibi.ad @item.DaireSayibi.soyad
                    </div>
                    <div class="row">
                        @item.DaireSayibi.tel
                    </div>
                    <div class="row">
                        @item.DaireSayibi.email
                    </div>
                </div>
                <div class="col-md-4 center-block"></div>
            </div>
        }
    }

</div>
