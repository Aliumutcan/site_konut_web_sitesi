@{
    ViewBag.Title = "TumGaleri";
    Layout = "~/Views/Shared/_yonetim.cshtml";
}
@using selcukunikonutlari.Models;
@model IEnumerable<Galeri>

<h2>Tüm Galeri</h2>

@foreach (var item in Model)
{
    <div class="tekresim" style="float:left; margin:10px; width:100px; height:130px">
        <img src="@item.resimyol" width="100" height="100" /><br />
        @Html.RouteLink("Düzenle", "yidaction", new { action = "GaleriEkleDuzenle", id = item.id })
        @Html.RouteLink("sil", "yidaction", new { action = "GaleriSil", id = item.id })
    </div>
}