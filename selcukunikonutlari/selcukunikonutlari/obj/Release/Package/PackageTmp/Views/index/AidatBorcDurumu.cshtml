@{
    ViewBag.Title = "AidatBorcDurumu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using selcukunikonutlari.Models
@model List<AidatBorc>
<h2>Aidat Borç Durumu</h2>

<div class="form-container">
  <table>
      <tr>
          <td>Yıl</td>
          <td>Ay</td>
          <td>Hesap Adı soyadı</td>
          <td>Borç Bakiye</td>
          <td>Geçikme Zammı</td>
          <td>Toplam</td>
          <td>Aylık</td>
          <td>Genel Toplam</td>
      </tr>

      @foreach (var item in Model)
      {
        <tr>
            <td>@item.yil</td>
            <td>@item.ay</td>
            <td>@ViewData["adsoyad"]</td>
            <td>@item.borc_bakiye</td>
            <td>@item.gecikmezammi</td>
            <td>@item.buaykiborc</td>
            <td>@item.aidat</td>
            <td>@item.geneltoplam</td>
        </tr>
      }

  </table>
</div>
