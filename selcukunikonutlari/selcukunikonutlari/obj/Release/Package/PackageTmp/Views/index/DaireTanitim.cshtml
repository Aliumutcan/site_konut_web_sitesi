@{
    ViewBag.Title = "DaireTanitim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using selcukunikonutlari.Models;
@using PagedList.Mvc;
@using PagedList;
@using selcukunikonutlari.Controllers.Araclar;
@model IPagedList<Daire>

<h2>Daire Tanıtımı</h2>

<script type="text/javascript">
    function ac(id) {
        document.getElementById(id).style.display="block";
    }
    function kapa(id) {
        document.getElementById(id).style.display = "none";
    }
</script>

<div style="border-bottom:solid 2px rgba(0, 0, 0, 0.41); padding:5px;">
    <div style="padding:10px;width:900px; height:auto; margin-left:auto; margin-right:auto;">
    @if (Model!=null)
    {
        Model1 model1 = new Model1();
        foreach (var item in Model)
        {
            foreach (var item2 in model1.Galeri.Where(x=>x.daireId==item.id).ToList())
            {
                <div style="width:150px; height:150px; float:left; margin-left:10px;">
                    <img src="@item2.resimyol" width="150" height="150" onclick="ac(@item2.id);" />
                </div>
            }

        }
        foreach (var item in Model)
        {
            foreach (var item2 in model1.Galeri.Where(x => x.daireId == item.id).ToList())
            {
                <div id="@item2.id" style="border:rgba(0, 0, 0, 0.41) solid 20px; position:absolute; position:fixed;margin-top:-275px;z-index:11; margin-left:auto;margin-right:auto; display:none;">
                    <img src="@item2.resimyol" width="920" height="600" onclick="kapa(@item2.id);" />
                </div>
            }

        }
    }
    else
    {
        <div>Hiç bir veriye ulaşılamadı</div>
    }
    </div>
    <div class="clear"></div>
    <br /><br /><br />
    <table>
        <tr>
            <td>Blok No</td>
            <td>Daire No</td>
            <td>Kat</td>
            <td>Acıklama</td>
            <td>Fiyat</td>
            <td>Durum</td>
        </tr>
       @if (Model!=null)
       {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.blokno</td>
                <td>@item.daireno</td>
                <td>@item.kat</td>
                <td>@item.aciklama</td>
                <td>@item.fiyat</td>
                <td>
                    @if (item.dairedurum==(int)EnumlarController.dairedurum.kiralik)
                    {
                        <text>Kiralık</text>
                    }
                    else if (item.dairedurum == (int)EnumlarController.dairedurum.satlik)
                    {
                        <text>Satlık</text>
                    }
                </td>
            </tr>
        }
       }
       else
       {
        <div>Hiç bir veriye ulaşılamadı</div>
       }
        
    </table>
</div><br />

<div class="pagedList">
    @Html.PagedListPager(Model, sayfa => Url.RouteUrl("sayfaaction", new { sayfa, action = "DaireTanitim" }), PagedListRenderOptions.OnlyShowFivePagesAtATime)
</div>

