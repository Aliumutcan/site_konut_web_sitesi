@{
    ViewBag.Title = "DuyuruTamMetin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model selcukunikonutlari.Models.Duyuru

<div class="blog">
    <div class="content">
        <div class="post">

            <div class="post-info">
                <div class="post-date"> <span class="day">@Model.tarih.Value.Day</span> <span class="month">@Model.tarih.Value.Month.ToString("MMMM")</span> <span class="year">@Model.tarih.Value.Year</span> </div>

                <div class="post-title">
                    <h1><a href="post.html">@Model.baslik</a></h1>
                </div>

            </div>

            <div class="post-text">
                <p>
                    @Html.Raw(Model.icerik)
                </p>
            </div>
        </div>

    </div>
</div>

